# ===========================================
# Database Configuration for OrangeHRM
# ===========================================
# Copy this file to .env and update the values
# according to your docker-compose.yml setup
# ===========================================

# Database Host
# Use 'localhost' if running script outside Docker
# Use 'db' if running script inside Docker network
DB_HOST=localhost

# Database Credentials (from docker-compose.yml)
DB_USER=orangehrm
DB_PASSWORD=orangehrm

# Database Name
DB_NAME=orangehrm

# Database Port (default MySQL port)
DB_PORT=3306
